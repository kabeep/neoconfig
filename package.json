{
    "name": "@kabeep/neoconfig",
    "description": "A Node.js CLI for the NeoFetch configuration file manager",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/cli.js",
    "types": "./dist/cli.d.ts",
    "files": ["dist"],
    "bin": {
        "neoconfig": "./dist/cli.js",
        "neofetch-configurator": "./dist/cli.js"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node bin/cli.ts",
        "prepare": "husky",
        "lint": "biome check src bin test --write",
        "lint-staged": "lint-staged",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "build": "tsup",
        "watch": "tsup --watch",
        "stats": "npm run build && size-limit dist/cli.js && cloc src"
    },
    "dependencies": {
        "@inquirer/core": "^10.1.2",
        "await-to-js": "^3.0.0",
        "ora": "^8.1.1",
        "os-locale": "^6.0.2",
        "trash": "^9.0.0",
        "update-notifier": "^7.3.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@inquirer/type": "^3.0.2",
        "@kabeep/node-translate-i18n": "^1.1.0",
        "@swc/core": "^1.10.6",
        "@types/node": "^22.10.5",
        "@types/update-notifier": "^6.0.8",
        "@types/yargs": "^17.0.33",
        "cloc": "^2.2.0-cloc",
        "cross-env": "^7.0.3",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "size-limit": "^11.1.6",
        "size-limit-preset-node-lib": "^0.3.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    },
    "author": "Jason Zhang <zzx2067@outlook.com>",
    "homepage": "https://github.com/kabeep/neoconfig#readme",
    "repository": "git@github.com:kabeep/neoconfig.git",
    "bugs": "https://github.com/kabeep/neoconfig/issue",
    "keywords": [
        "neofetch",
        "configuration",
        "nodejs",
        "file",
        "manager",
        "cli"
    ],
    "engines": {
        "node": ">=18"
    },
    "license": "MIT"
}
